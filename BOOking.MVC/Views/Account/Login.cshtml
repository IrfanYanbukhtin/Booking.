@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="https://cdn.worldvectorlogo.com/logos/bookingcom-1.svg">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/signup.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <title>Booking.com</title>
</head>
<body>

    <header>
        <div class="header ">
            <div class="nav-bar container1 d-flex justify-content-between">
                <div class="col-lg-6 brand ">
                    <h2><a asp-controller="home" asp-action="index">Booking.com</a></h2>
                </div>
                <div class="list-bt d-flex">
                    <div data-toggle="tooltip" data-placement="bottom" title="Select your language " class="lang">
                        <a href="#" class="d-none">EN</a>
                        <a href="#">AZ</a>
                        <a href="#">RU</a>
                    </div>
                    <div class="help">
                        <a asp-controller="contact" asp-action="index">
                            <i class="fa-regular fa-circle-question"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- LOGIN START -->

    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="row" id="tittle">
                                <div class="col-lg-6">
                                    <p style="font-size:2rem">Daxil ol</p>
                                </div>
                                <div class="col-lg-6">
                                    <a asp-controller="home" asp-action="index">
                                        <h2>Booking.az</h2>
                                    </a>
                                </div>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <form class="pt-3" asp-action="login" method="post">
                                <div class="form-group">
                                    <input asp-for="Username" class="form-control" placeholder="Username">
                                    <span asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Sign in</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    <a asp-controller="account" asp-action="forgottenpassword" class="text-primary">Forgot password?</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Create an account <a asp-controller="account" asp-action="register" class="text-primary">Sign up </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="login">
        <div class="line1">
            <hr />
            <p class="p1">
                By signing in or creating an account, you agree with our
                <a href="" style="text-decoration: none"><span style=color:blue;>Terms & Conditions</span></a> and
                <a href="" style="text-decoration: none"><span style=color:blue;>Privacy statement</span></a>
            </p>
            <hr />
        </div>
        <div class="line1">
            <p class="p1">All rights reserved.</p>
            <p class="p1">Copyright (2006-2023) - Yanbukhtin™</p>
        </div>
    </div>

</body>
</html>