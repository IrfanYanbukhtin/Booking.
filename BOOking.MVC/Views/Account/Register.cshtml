@using BOOking.MVC.Models;
@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="https://cdn.worldvectorlogo.com/logos/bookingcom-1.svg">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/signup.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <title>Booking.com</title>
</head>
<body>

    <header>
        <div class="header ">
            <div class="nav-bar container1 d-flex justify-content-between">
                <div class="col-lg-6 brand ">
                    <h2><a asp-controller="home" asp-action="index">Booking.com</a></h2>
                </div>
                <div class="list-bt d-flex">
                    <div class="flaq">
                        <button type="btn" value="button"><img src="~/img/UkFlag.png" alt="chooce your language"></button>
                    </div>
                    <div class="help">
                        <a asp-controller="contact" asp-action="index">
                            <i class="fa-regular fa-circle-question"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- LOGIN START -->

    <div class="login">

        <div class="form">
            <h1 class="formheading">Sign in or create an account</h1>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form action="">
                <span class="text">Email address</span>
                <input asp-for="Email" type="email" class="input" type="email" placeholder="  Enter your email address" id="email" required />

                <input asp-for="Password" type="password" class="input" type="password" placeholder="  Enter your password" id="password" required />

                <input asp-for="ConfirmPassword" type="password" class="input" type="password" placeholder="  Confirm password" required />

                <button type="submit"><span>Continue with email</span></button>
            </form>
        </div>

        <div class="line">
            <hr class="hr" />
            <p class="p">or use one of these options</p>
            <hr class="hr" />
        </div>

        <div class="authlogin">
            <button class="google face">
                <img src="data:image/png;base64,"
                     alt="img" />
            </button>

            <button class="google">
                <img class="googleimage"
                     src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSC-KxlZ9aqVMbPO3Ll49gBa3Ro245LV3KdLR2w4kQO4gy_PYVGJTPv4mBaJmVRNK4WPp4&usqp=CAU"
                     alt="" />
            </button>

            <button class="google">
                <i class="fa-solid fa-mobile-screen"></i>
            </button>
        </div>
        <b>
            <p style="color:rgb(0, 94, 255)">More ways to sign in<p>
        </b>
        <div class="line1">
            <hr />
            <p class="p1">
                By signing in or creating an account, you agree with our
                <a href="" style="text-decoration: none"><span style=color:blue;>Terms & Conditions</span></a> and
                <a href="" style="text-decoration: none"><span style=color:blue;>Privacy statement</span></a>
            </p>
            <hr />
        </div>
        <div class="line1">
            <p class="p1">All rights reserved.</p>
            <p class="p1">Copyright (2006-2023) - Yanbukhtin™</p>
        </div>
    </div>

</body>
</html>