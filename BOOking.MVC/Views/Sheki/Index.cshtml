                    </div>
                    <div class="register">
                        <a asp-controller="account" asp-action="register"><span> Register</span></a>
                    </div>
                    <div class="signIn">
                        <a asp-controller="account" asp-action="login"><span> Sign in</span></a>
                    </div>
