    </header>

    <!-- HEADER END -->
    <div class="hotel-area pt-150 pb-150">
        <div class="container">
            <div class="row ">
                <div class="col-xs-12">
                    <div class="hotel-title">
                        <h3>Search hotel</h3>
                    </div>
                    <div class="hotel-form">
                        <form id="search" action="#">
                            <input type="search" placeholder="Search..." name="search" />
                            <button type="submit">search</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row" id="hotelrow">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6 col-xs-12 box">
                        <div class="single-course mb-70">
                            <div class="hotel-img">
                                <a asp-controller="sheki" asp-action="details" asp-route-id="@item.Id">
                                    <img src="@item.ImageUrl" alt="course">
                                    <div class="hotel-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="hotel-content">
                                <h3><a asp-controller="sheki" asp-action="details" asp-route-id="@item.Id">@item.Name</a></h3>
                                <p>@item.ShortDescription</p>

                                <p>@item.Reviews</p>
                                <div><p>@item.Rate</p></div>
                                <a class="default-btn" asp-controller="sheki" asp-action="details" asp-route-id="@item.Id">See availability</a>
                                <h5>@item.Price</h5>

                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="row justify-content-center">
                <input value="@ViewBag.HotelCount" type="hidden" id="hotelCount" />
                <button class="btn btn-primary" id="loadHotel">Load more</button>
            </div>
        </div>
    </div>


