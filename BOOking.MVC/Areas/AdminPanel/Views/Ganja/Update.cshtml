                    <input asp-for="ImageUrl" class="form-control" id="exampleInputName1" placeholder="Img Url">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl_2">2 Img Url</label>
                    <input asp-for="ImageUrl_2" class="form-control" id="exampleInputName1" placeholder="Img Url">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl_3">3 Img Url</label>
                    <input asp-for="ImageUrl_3" class="form-control" id="exampleInputName1" placeholder="Img Url">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl_4">4 Img Url</label>
                    <input asp-for="ImageUrl_4" class="form-control" id="exampleInputName1" placeholder="Img Url">
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription">Short Description</label>
                    <input asp-for="ShortDescription" class="form-control" id="exampleInputName1" placeholder="Short description">
                </div>
                <div class="form-group">
