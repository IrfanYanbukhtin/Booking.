                    <input asp-for="LongDescription" class="form-control" id="exampleInputName1" placeholder="Long Description">
                </div>
                <div class="form-group">
                    <label asp-for="Rate">Rate</label>
                    <input asp-for="Rate" class="form-control" id="exampleInputName1" placeholder="Rate">
                </div>
                <div class="form-group">
                    <label asp-for="Reviews">Reviews</label>
                    <input asp-for="Reviews" class="form-control" id="exampleInputName1" placeholder="Reviews">
                </div>
                <div class="form-group">
